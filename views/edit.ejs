<!DOCTYPE html>
<html lang="en">
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <link
    rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous"
  />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Article</title>
  <body>
    <% articles.forEach(blog => {%>
    <center>
    <form action = "/user/edit/<%= blog.articleID %>" method="post">
      <div class="form-group">
        <label for="exampleInputEmail1">Article Title</label>
        <input class="form-control" type="text" placeholder="Enter Title" required name = "articleTitle" value = <%= blog.articleTitle %> >
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Article Subtitle</label>
        <input class="form-control" type="text" placeholder="Enter SubTitle" required name = "articleSubtitle" value = <%= blog.articleSubtitle %> >
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Article Text</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" required name = "articleText" ><%= blog.articleText %></textarea>
      </div>
      <input type="hidden" name="articleID" value="<%= blog.articleID %>">
      <br>
      <button class="btn btn-primary" role="button" aria-pressed="true">Save Changes</button>
    </form>
    <br>
    <% if (blog.articleState === 0) { %>
    <form action="/user/publishDraft/<%= blog.articleID %>" method="post">
        <input type="hidden" name="articleState" value="1">
        <button type="submit" class="btn btn-primary">Publish Article</button>
    </form>
    <% } %>
    </center>
    <% }) %>
  </body>
</html>